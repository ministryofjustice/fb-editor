<%= link_to t("actions.back"), services_path, class: "govuk-back-link" %>

<%= render 'page_layout' do %>
  <% set_form_defaults @form %>
  <%= form_for(@form, url: questionnaire_path, method: :put) do |f| %>
    <%= render 'partials/form_errors', f: f %>
    <h1 class="govuk-heading-xl"><%= page_heading %></h1>
    <p class="govuk-body"><%= t("questionnaire.#{@page}_form.subheading").html_safe %></p>

    <%= f.govuk_collection_radio_buttons :new_form_reason,
                                         @form.new_form_reason_options,
                                         :value,
                                         :name,
                                         legend: { text:  t("questionnaire.get_started_form.legend.text") },
                                         hint: { text: '' } %>

    <%= render 'form_buttons' %>
  <% end %>
<% end %>
