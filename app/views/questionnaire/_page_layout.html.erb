<%
  translation_key = "questionnaire.#{@page}"
  translation_key += "_form" if %i[get_started gov_forms continue form_features new_form].include?(@page)
%>
<h1><%= t("#{translation_key}.heading") %></h1>
<p><%= t("#{translation_key}.subheading").html_safe %></p>

<%= yield %>

<%  if Rails.env.development? %>
 <div>
  <!--Display session attributes-->
  <strong>Session</strong>
  <%= render_answers_list(session[:questionnaire_answers]) %>

  <!--Display payload attributes-->
   <strong>Payload</strong>
  <%= render_answers_list(Questionnaire::AttributesExtractor.new(session[:questionnaire_answers]).extract!) %>
 </div>
<% end %>
