<%= link_to t("actions.back"), questionnaire_path(:new_form), class: "govuk-back-link" %>

<%= render 'page_layout' do %>
  <h1 class="govuk-heading-xl"><%= page_heading %></h1>

  <p class="govuk-body"><%= t("questionnaire.#{@page}.subheading").html_safe %></p>
  <p class="govuk-body"><%=t('questionnaire.requirements.p1') %></p>
  <ul>
    <%t('questionnaire.requirements.p1_options').each do |option|%>
      <li><%= option.html_safe %></li>
    <%end%>
  </ul>
  <p class="govuk-body"><%=t('questionnaire.requirements.p2') %></p>
  <p class="govuk-body"><%=t('questionnaire.requirements.p3').html_safe %></p>
  <%= link_to t('dialogs.button_continue'), new_service_path, class: "govuk-button fb-govuk-button" %>
<% end %>
