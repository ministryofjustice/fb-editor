<!DOCTYPE html>
<html lang="en">
  <head>
    <title>MoJ Forms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= render partial: 'partials/head_tags' %>
    <%= render partial: 'partials/properties' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body class="govuk-template__body govuk-body <%= "#{controller_name}-#{action_name}" %>">
    <%= render partial: 'partials/header' %>
    <%= render partial: 'partials/form_navigation' %>

    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing govuk-width-container govuk-body-m"
          id="main-content" role="main">

      <%= yield %>
    </main>

    <%= render partial: 'partials/footer' %>
    <%= render partial: 'partials/template_dialog' %>
    <%= render partial: 'partials/template_dialog_confirmation' %>
    <%= render partial: 'partials/template_dialog_confirmation_delete' %>
  </body>
</html>
