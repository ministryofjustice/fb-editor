<div class="component component-dialog component-dialog-delete" id="dialog-confirmation-delete">
  <h3 data-node="heading" class="govuk-label govuk-label--m">
    <%= t('question_items.delete_modal.can_not_delete_heading') %>
  </h3>

  <% if pages.size > 1 %>
    <p><%= t('question_items.delete_modal.delete_option_used_for_conditional_content_message_multiple') %></p>
    <ul>
    <% pages.each do |page| %>
      <li><%= page[:heading] %></li>
    <% end %>
    </ul>
    <p><%= t('pages.delete_modal.update_content_areas') %></p>
  <% else %>
    <p><%= t('question_items.delete_modal.delete_option_used_for_conditional_content_message_single', title: pages.first.heading) %></p>
    <p><%= t('pages.delete_modal.update_content_area') %></p>
  <% end %>


  <div class="govuk-button-group">
    <button class="govuk-button fb-govuk-button"><%= t('dialogs.button_understood') %></button>
  </div>
</div>
