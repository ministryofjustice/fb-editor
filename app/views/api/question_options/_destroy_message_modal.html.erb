<div class="component component-dialog component-dialog-api-request dialog-delete"
     data-component="DialogApiRequest">

  <h3 data-node="heading" class="govuk-label govuk-label--m">
    <%= t('dialogs.heading_delete_option', label: @label) %>
  </h3>
  <p data-node="content">
    <%= t('dialogs.message_delete') %>
  </p>

  <div class="govuk-button-group">
    <button class="govuk-button govuk-button--warning" data-method="delete"><%= t('dialogs.button_delete_option') -%></button>
    <button class="govuk-button govuk-button--secondary"><%= t('dialogs.button_cancel') %></button>
  </div>
</div>
