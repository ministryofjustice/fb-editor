<div class="component component-dialog component-dialog-api-request dialog-delete"
     data-component="DialogApiRequest">

  <h3 id="delete-page-used-for-conditional-content-dialog-title" data-node="heading" class="govuk-label govuk-label--m">
    <%= t('pages.delete_modal.you_cannot_delete_this_page') %>
  </h3>

  <% if pages.size > 1 %>
    <p><%= t('pages.delete_modal.delete_page_used_for_conditional_content_message_multiple') %></p>
    <ul>
    <% pages.each do |page| %>
      <li><%= page[:heading] %></li>
    <% end %>
    </ul>
    <p><%= t('pages.delete_modal.update_content_areas') %></p>
  <% else %>
    <p><%= t('pages.delete_modal.delete_page_used_for_conditional_content_message_single', title: pages.first.heading) %></p>
    <p><%= t('pages.delete_modal.update_content_area') %></p>
  <% end %>


  <div class="govuk-button-group">
    <button class="govuk-button fb-govuk-button"><%= t('dialogs.button_understood') %></button>
  </div>
</div>
