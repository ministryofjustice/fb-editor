<% content_for(:title) do %>
  <%= display_resource_name('Service') %>
<% end %>

<header class="main-content__header" role="banner">
  <h1 class="main-content__page-title" id="page-title">
    <%= 'Show API Submission Settings' %>
  </h1>
</header>

<section class="main-content__body">
  <dl class="govuk-summary-list">

<br>
Current information are:
<br>
<% @url_dev %>
<br>
<% @key_dev%>
<br>


  <div class="govuk-!-margin-left-5">
    <a href="<%= admin_service_path(@version.metadata['service_id']) %>" class="govuk-back-link">
      Back to service
    </a>

    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Created by
        </dt>
        <dd class="govuk-summary-list__value">
          <%# <%= @version_creator.name %> %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Created at
        </dt>
        <dd class="govuk-summary-list__value">
          <%# <%= l(@version.metadata['created_at'].to_time) %> %>
        </dd>
      </div>
    </dl>
    <pre class="govuk-!-padding-right-5" style="white-space:pre-wrap;">
      <%# <%= JSON.pretty_generate(@version.metadata) %> %>
    </pre>
  </div>





  <%= form_with(
    url: admin_service_api_submission_path(params[:service_id],0),
    method: :put,
    local: true) do |f| %>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
        url
      </dt>
      <dd class="govuk-summary-list__value">
        <%= 'and one value please' %>
        <br>
      <%= f.text_field :endpoint_url, value: @endpoint_url  %>

        <%= @endpoint_url %>
      </dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">
          key
        </dt>
      <dd class="govuk-summary-list__value">
        <%= f.text_field :endpoint_key, value: @endpoint_key  %>
        <%= @endpoint_key %>
    </div>
    <%= f.submit 'Save', class: 'govuk-button fb-govuk-button', id: 'api-submission-save' %>
  <% end %>

  </dl>
</section>
