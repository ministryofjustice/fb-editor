<% content_for :back_link do %>
  <%= render MojForms::BackLinkComponent.new(
    href: settings_submission_index_path,
    hidden_text: "to #{t('settings.submission.heading')}"
  ) %>
<% end %>

<%= mojf_settings_screen(
  heading:t('settings.collection_email.heading'),
  description: t('settings.collection_email.description')
  ) do |c| %>

  <% content_for :forms do %>
    <%= render 'form', object: @email_settings_dev, deployment_environment: 'dev' %>
    <%= render 'form', object: @email_settings_production, deployment_environment: 'production' %>
  <% end %>

  <%= yield :error_summary %>
  <%= yield :forms %>

<% end %>
